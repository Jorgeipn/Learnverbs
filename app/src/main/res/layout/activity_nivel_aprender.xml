<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_nivel_aprender"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="mx.ipn.escom.learnverbs.nivelAprender"
    android:orientation="vertical"
    android:background="@color/colorPrimaryDark"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/tv_nivelAprender_tiempo"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Presente / Present"

            android:textColor="@color/colorIcons"
            android:textSize="22dp"
            android:gravity="center"
            android:background="@color/colorPrimaryAlpha"
            />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:background="@color/colorPrimaryLight"
            android:src="@drawable/ic_jorgeipn"
            />

        <TextView
            android:id="@+id/tv_nivelAprender_nombreESP"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="VERBO EN ESPAÑOL"

            android:textColor="@color/colorIcons"
            android:textSize="22dp"
            android:gravity="center"
            android:background="@color/colorPrimaryLight"
            android:layout_marginTop="1dp"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        >

       <LinearLayout
           android:id="@+id/ly_contenedor"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:layout_weight="1"
           android:orientation="horizontal"
           android:gravity="center_horizontal|center_vertical"
            />

        <ImageButton
            android:id="@+id/btn_ok"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_correct"
            android:background="@color/colorPrimaryDark"
            android:padding="5dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="bottom"
        >

        <Button
            android:id="@+id/btn_nivelAprender_speakESP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Español"
            style="@style/boton"
            />

        <Button
            android:id="@+id/btn_nivelAprender_speakING"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Ingles"
            style="@style/boton"
            />

    </LinearLayout>

</LinearLayout>
